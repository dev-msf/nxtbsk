# Environment variables for the Web-Shop Dashboard
# Copy this file to .env and update the values

# Database connection for Prisma/Postgres
DATABASE_URL="postgresql://postgres:postgres@db:5432/postgres"

# JWT secret for authentication (generate a strong secret)
JWT_SECRET="your-super-secret-jwt-key-here"

# Ollama (Mistral) LLM API endpoint
# For Docker: use host.docker.internal to access host machine
# For local development: use localhost
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=mistral
